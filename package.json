{
    "name": "vscode-denort",
    "displayName": "vscode-denort",
    "description": "VSCode extension for Denort.",
    "version": "0.0.1",
    "publisher": "autsing",
    "engines": {
        "vscode": "^1.76.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:typescript",
        "onLanguage:javascript"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "denort.initializeWorkspace",
                "title": "Denort: 初始化工作区"
            },
            {
                "command": "denort.connect",
                "title": "Denort: 连接设备"
            },
            {
                "command": "denort.disconnect",
                "title": "Denort: 断开设备"
            },
            {
                "command": "denort.run",
                "title": "Denort: 运行工程"
            },
            {
                "command": "denort.stop",
                "title": "Denort: 停止工程"
            },
            {
                "command": "denort.upload",
                "title": "Denort: 上传工程"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Denort",
            "properties": {
                "denort.enable": {
                    "type": "boolean",
                    "default": false,
                    "markdownDescription": "控制是否在工作区启用 Denort 插件，建议仅在需要的工作区开启",
                    "scope": "resource",
                    "examples": [
                        true,
                        false
                    ]
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/jsonfile": "^6.1.1",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.76.0",
        "@types/ws": "^8.5.4",
        "@typescript-eslint/eslint-plugin": "^5.53.0",
        "@typescript-eslint/parser": "^5.53.0",
        "@vscode/test-electron": "^2.2.3",
        "eslint": "^8.34.0",
        "glob": "^8.1.0",
        "jsonfile": "^6.1.0",
        "mocha": "^10.2.0",
        "ts-loader": "^9.4.2",
        "typescript": "^4.9.5",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "ws": "^8.13.0"
    }
}
