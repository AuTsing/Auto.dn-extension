{
    "name": "autodn-extension",
    "displayName": "Auto.dn",
    "description": "The VSCode extension for Auto.dn",
    "version": "1.0.2",
    "publisher": "autsing",
    "repository": "https://github.com/AuTsing/Auto.dn-extension",
    "icon": "./assets/images/logo_128_128.png",
    "keywords": [
        "denofa",
        "Denofa",
        "autodn",
        "Auto.dn"
    ],
    "engines": {
        "vscode": "^1.76.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:typescript",
        "onLanguage:javascript"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "autodn.initializeWorkspace",
                "title": "Autodn: 初始化工作区"
            },
            {
                "command": "autodn.updateDts",
                "title": "Autodn: 更新类型定义文件"
            },
            {
                "command": "autodn.connect",
                "title": "Autodn: 连接设备"
            },
            {
                "command": "autodn.disconnect",
                "title": "Autodn: 断开设备"
            },
            {
                "command": "autodn.run",
                "title": "Autodn: 运行工程"
            },
            {
                "command": "autodn.stop",
                "title": "Autodn: 停止工程"
            },
            {
                "command": "autodn.upload",
                "title": "Autodn: 上传工程"
            },
            {
                "command": "autodn.snapshot",
                "title": "Autodn: 屏幕截图"
            }
        ],
        "configuration": {
            "title": "Autodn",
            "properties": {
                "autodn.enable": {
                    "description": "启用插件",
                    "type": "boolean",
                    "default": false
                },
                "autodn.updateDts": {
                    "description": "检查更新类型定义文件",
                    "type": "boolean",
                    "default": true
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/jsonfile": "^6.1.1",
        "@types/mocha": "^10.0.1",
        "@types/node": "18.x",
        "@types/vscode": "^1.76.0",
        "@types/ws": "^8.5.4",
        "@typescript-eslint/eslint-plugin": "^5.53.0",
        "@typescript-eslint/parser": "^5.53.0",
        "@vscode/test-electron": "^2.2.3",
        "axios": "^1.4.0",
        "eslint": "^8.34.0",
        "glob": "^8.1.0",
        "jsonfile": "^6.1.0",
        "mocha": "^10.2.0",
        "ts-loader": "^9.4.2",
        "typescript": "^4.9.5",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "ws": "^8.13.0"
    }
}
